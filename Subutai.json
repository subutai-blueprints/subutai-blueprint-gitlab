{
    "name": "${environmentName}",
    "description": "GitLab",
    "version": "2.0.4",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "https",
                    "domain": "${domainName}",
                    "internal-port": "443",
                    "external-port": "443",
                    "ssl_backend": "true"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/subutai-blueprints/subutai-blueprint-gitlab/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            }, 
            {
                "key": "ssh_port", 
                "value": "${sshPort}"
            }
        ],
        "groups": [
            {
                "name": "gl",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "nc",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "nc",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        }, 
        "sshPort": {
            "description": "SSH Port (1000 - 65535)", 
            "type": "number", 
            "default": "13000"
        }
    }
}
